<% layout("/layouts/boilerplate") %>

<style>
  /* Card container styling */
  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for subtle depth */
    transition: transform 0.2s, box-shadow 0.2s; /* Smooth transition on hover */
  }

  .card:hover {
    transform: scale(1.03); /* Slight scale effect on hover */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Enhanced shadow on hover */
  }

  /* Card image styling */
  .card-img-top {
    height: 200px; /* Fixed height for uniformity */
    object-fit: cover; /* Ensures the image fits within the box */
    width: 100%; /* Ensures full width coverage */
  }

  /* Card body styling */
  .card-body {
    padding: 20px;
  }

  .card-title {
    font-size: 1.25rem; /* Slightly larger for better readability */
    margin-bottom: 10px;
    font-weight: bold; /* Emphasized title */
  }

  .card-text {
    margin-bottom: 15px; /* Proper spacing between description and other content */
  }

  /* List item styling */
  .list-group-item {
    border: none;
    padding: 10px 15px;
    background-color: #f9f9f9; /* Subtle background color for list items */
  }

  /* Button styling */
  .btn-primary {
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    padding: 10px 15px;
    color: #fff;
    text-align: center;
    display: block;
    text-decoration: none;
    transition: background-color 0.3s ease; /* Smooth transition on hover */
  }

  .btn-primary:hover {
    background-color: #0056b3; /* Darker blue on hover */
  }

  /* Responsive grid layout */
  .row {
    display: flex;
    flex-wrap: wrap;
    margin: -15px; /* Adjusts margins for consistent spacing */
  }

  /* Columns for larger screens */
  .col-lg-4 {
    padding: 15px;
    flex: 0 0 calc(33.333% - 30px); /* 3 columns layout */
    max-width: calc(33.333% - 30px);
  }

  /* Columns for medium screens */
  .col-md-4 {
    padding: 15px;
    flex: 0 0 calc(50% - 30px); /* 2 columns layout */
    max-width: calc(50% - 30px);
  }

  /* Columns for small screens */
  .col-sm-12 {
    padding: 15px;
    flex: 0 0 100%; /* 1 column layout */
    max-width: 100%;
  }

  /* Adjust container margins */
  .container {
    margin-top: 30px; /* Adds space above the container */
  }
</style>

<div class="container mt-3">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
          <div class="card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= listing.location %></li>
              <li class="list-group-item"><b><%= listing.project_by.name %></b></li>
            </ul>
            <div class="card-body text-center">
              <a href="/developers/<%= listing.project_by._id %>" class="btn btn-primary">
                More projects by <%= listing.project_by.name %>
              </a>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
